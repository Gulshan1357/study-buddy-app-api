<% if notice.present? %>
  <div class="alert alert-info"><%= notice %></div>
<% end %>
<div class="card my-5">
  <div class="card-body">
    <% if Current.user %>
      <%= render @slot %>
      <div class="mt-2">
        <%= link_to "Edit this slot", edit_slot_path(@slot), class: "link-secondary"  %> |
        <%= link_to "Back to slots", slots_path, class: "link-secondary" %>

        <%= button_to "Destroy this slot", @slot, method: :delete, class: "btn btn-danger my-2" %>
      </div>


    <% end %>
  </div>
</div>
<div>
  <%= link_to "Search a date for this time slot", new_meeting_path(time_slot: params[:id]), class: "btn btn-success"  %>
</div>
